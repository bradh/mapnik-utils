<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE Map>
<Map bgcolor="steelblue">

  <Style name="schools">
    <Rule>
      <PointSymbolizer file="amenity=school.png" width="24" height="24" type="png" allow_overlap="yes"/>
      <TextSymbolizer name="id" face_name="DejaVu Sans Book" size="12"  allow_overlap="yes" dx="5" dy="5"/>
    </Rule>
  </Style>

  <Layer name="points">
    <StyleName>schools</StyleName>
    <Datasource>
      <Parameter name="type">shape</Parameter>
      <Parameter name="file">Roadflaw Data</Parameter>
    </Datasource>
  </Layer>

</Map>
